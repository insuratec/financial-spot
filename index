                                <option value="brokerage">Brokerage</option>
                                <option value="cd">Certificate of Deposit</option>
                                <option value="money_market">Money Market</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="form-col">
                            <label>Institution</label>
